<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ gallery.title }} - {{ site_name }}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="/css/site.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <header class="bg-white shadow-md">
        <div class="container mx-auto px-4 py-6">
            <h1 class="text-3xl font-bold text-gray-800">
                <a href="/">{{ site_name }}</a>
            </h1>
            <p class="text-gray-600">by {{ author }}</p>
        </div>
    </header>

    <main class="container mx-auto px-4 py-8">
        <nav class="mb-4">
            <a href="/" class="text-blue-500 hover:underline">&larr; Back to Home</a>
        </nav>

        <!-- Gallery Header -->
        <section class="mb-12 bg-white rounded-lg shadow-md overflow-hidden">
            <div class="md:flex">
                <div class="md:flex-shrink-0 md:w-2/3">
                    <img class="w-full h-64 object-cover md:h-full" src="{{ gallery.cover.path }}" alt="{{ gallery.title }}">
                </div>
                <div class="p-8 md:w-1/3">
                    <div class="uppercase tracking-wide text-sm text-indigo-500 font-semibold">{{ gallery.date }}</div>
                    <h2 class="block mt-1 text-lg leading-tight font-medium text-black">{{ gallery.title }}</h2>
                    <p class="mt-2 text-gray-500">{{ gallery.description }}</p>
                    <div class="mt-4">
                        {% for tag in gallery.tags %}
                        <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#{{ tag }}</span>
                        {% endfor %}
                    </div>
                    <p class="mt-4 text-sm text-gray-600">Last updated: {{ gallery.last_updated }}</p>
                </div>
            </div>
        </section>

        <!-- Gallery Content -->
        {% if gallery.content %}
        <section class="mb-12 bg-white rounded-lg shadow-md overflow-hidden p-8">
            <div class="markdown-content">
                {{ gallery.content | markdown | safe }}
            </div>
        </section>
        {% endif %}

        <!-- Image Thumbnails -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
            {% for image in gallery.images %}
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <a href="{{ image.path }}" class="block">
                    <img class="w-full h-48 object-cover" src="{{ image.thumbnail_path }}" alt="{{ image.title }}">
                </a>
                <div class="p-4">
                    <h3 class="text-lg font-semibold text-gray-800">
                        <a href="{{ image.url }}" class="hover:underline">{{ image.title }}</a>
                    </h3>
                    {% if image.caption %}
                    <blockquote class="text-md leading-tight">{{ image.caption }}</blockquote>
                    {% endif %}
                    {% if image.exif.DateTimeOriginal %}
                    <p class="text-sm italic text-gray-600">{{ image.exif.DateTimeOriginal }}</p>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </main>

    <footer class="bg-white shadow-md mt-12">
        <div class="container mx-auto px-4 py-6 text-center text-gray-600">
            &copy; {{ current_year }} {{ author }}. All rights reserved.
        </div>
    </footer>
</body>
</html>